<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.audiorecorder.recorder.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/tab_layout"
        android:adjustViewBounds="true"
        android:contentDescription="@string/Logoehb"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:srcCompat="@drawable/logo" />


    <Button
        android:id="@+id/opnemen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stoppen"
        android:layout_alignStart="@+id/stoppen"
        android:layout_below="@+id/logo"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:onClick="Klikken"
        android:text="@string/Opnemen"
        android:textSize="30sp" />

    <Button
        android:id="@+id/stoppen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/afspelen"
        android:layout_alignStart="@+id/afspelen"
        android:layout_below="@+id/opnemen"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:onClick="Klikken"
        android:text="@string/Stoppen"
        android:textSize="30sp" />


    <Button
        android:id="@+id/afspelen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stoppen"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="12dp"
        android:onClick="Klikken"
        android:text="@string/Afspelen"
        android:textSize="30sp" />

    <Button
        android:id="@+id/stopAfspelen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/afspelen"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="12dp"
        android:onClick="Klikken"
        android:text="@string/StopAfspelen"
        android:textSize="30sp"
        tools:text="Stop Afspelen" />


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.design.widget.TabLayout>
<!--
    <fragment
        android:id="@+id/fragment"
        android:name="com.audiorecorder.recorder.TabFragment_Main"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_above="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout="@layout/tab_fragment_main" />
-->
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tab_layout"/>

</RelativeLayout>
